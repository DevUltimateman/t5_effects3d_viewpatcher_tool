<Window x:Class="t5_effects3d_viewpatcher_gui_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t5_effects3d_viewpatcher_gui_tool"
        mc:Ignorable="d"
        Title="T5 Effects3d Patcher GUI Tool" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>
        <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Orientation="Vertical"
                    >

            <Label Content="T5 Effects3d Patcher GUI Tool"
                   FontSize="20"
                   FontWeight="Bold"
                   FontFamily="Comic Sans MS"
                   Foreground="DarkOrange">

            </Label>


            <StackPanel Grid.Row="1" Margin="5,0,0,0"  Orientation="Horizontal">
                <TextBlock Text="Select your game folder location:"
               FontSize="16"
               Foreground="DarkGray"
               ></TextBlock>

                <Button  Content="Choose Folder"
            Background="Transparent"
            Foreground="DarkOrange"
            FontSize="14"
            Height="20"
            VerticalAlignment="Top"
             Margin="20,1,0,0" Click="Button_Click"
            ></Button>
            </StackPanel>

            <TextBlock x:Name="txtGamePath" Text="not selected"
                FontSize="12"
                Foreground="DarkRed"
                       Margin="5,0,0,0"
                ></TextBlock>   

        </StackPanel>

        
    </Grid>
</Window>
