<Window x:Class="t5_effects3d_viewpatcher_gui_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t5_effects3d_viewpatcher_gui_tool"
        mc:Ignorable="d"
        Title="T5 Effects3d Patcher GUI Tool" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="525"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        

        <StackPanel Orientation="Vertical"
                    >

            <Label Content="T5 Effects3d Patcher GUI Tool"
                   FontSize="20"
                   Width="Auto"
                   Height="Auto"
                   FontWeight="Bold"
                   FontFamily="Comic Sans MS"
                   Foreground="DarkOrange">

            </Label>


            <StackPanel  Margin="5,10,0,0"  Orientation="Horizontal">
                <TextBlock Text="Select your game folder location:"
               FontSize="16"
               Foreground="DarkGray"
               ></TextBlock>

                <Button x:Name="btnFolderPicker"  Content="Choose Folder"
            Background="Transparent"
            Foreground="DarkOrange"
            FontSize="14"
             Height="25"
             Width="100"
            VerticalAlignment="Top"
                         HorizontalAlignment="Right"
                         
             Margin="110,1,0,0" Click="btnFolderPicker_Click" BorderBrush="DarkOrange"
            />

            </StackPanel>

            <TextBlock x:Name="txtGamePath" Text="not selected"
                FontSize="12"
                Foreground="DarkRed"
                       Margin="5,0,0,0"
                ></TextBlock>

            

            <StackPanel Orientation="Horizontal"
                        Margin="5,15,0,0"
                        >


                <TextBlock Text="Make a backup of existing dropdown list?"
                   FontSize="16"
                   Foreground="DarkGray"
                   ></TextBlock>

                <Button x:Name="btnBackUp"  Content="Back Up"
                        Background="Transparent"
                        Foreground="DarkGreen"
                        FontSize="14"
                        Height="25"
                         Width="100"
                        VerticalAlignment="Top"
                                     HorizontalAlignment="Right"
                                     
             
                         Margin="45,1,0,0" Click="btnBackUp_Click" BorderBrush="DarkGreen"
                        MouseEnter="btnBackUp_MouseEnter" 
                        MouseLeave="btnBackUp_MouseLeave">
                        
                        

                    <Button.Style x:Uid="btnBackUp">
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="DarkGreen"/>
                            <Setter Property="BorderBrush" Value="DarkGreen"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkGreen"/>
                                    <Setter Property="Foreground" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="DarkGreen"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="DarkGreen"/>
                                    <Setter Property="BorderBrush" Value="DarkGreen"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                        
                        
                </Button>

            </StackPanel>

           <!--<    -->
                  

                <TextBlock x:Name="txtBackUpPath" Text="Back Up Path"
                       FontSize="10"
                        Foreground="DarkRed"
                        Margin="5,0,0,0"
                       >
                
            </TextBlock>
        
        </StackPanel>
        
        
        <!--RIGHT SIDE OF GUI-->
            
        
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Grid.RowSpan="3"
                    Margin="5">


                    <TextBlock Text="Drop fx files here onto the dark patch."
                       FontSize="14"
                       TextWrapping="Wrap"
           
                       Height="Auto"
                       Width="auto"
                       FontFamily="Comic Sans MS"
                       Opacity=".8"
           
                       Foreground="DarkGray"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                    </TextBlock>



                    <StackPanel Orientation="Vertical"
                                    Margin="5"
                                    Grid.RowSpan="2"
                                    AllowDrop="True" Drop="StackPanel_Drop" 
                                Height="385">


                        <StackPanel.Background>
                            <SolidColorBrush Color="#FF1B101D"/>
                        </StackPanel.Background>

                    </StackPanel>

            <!--THIS HERE END OF RIGHT SIDE OF GUI. CANT REALLY ADD MORE NOW IN HERE-->




        </StackPanel>
        

        
    </Grid>
</Window>
