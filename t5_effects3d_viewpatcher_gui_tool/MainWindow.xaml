<Window x:Class="t5_effects3d_viewpatcher_gui_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t5_effects3d_viewpatcher_gui_tool"
        mc:Ignorable="d"
        Title="T5 Effects3d Patcher GUI Tool" Height="600" Width="1200"
        ResizeMode="NoResize">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        

        <StackPanel Orientation="Vertical"
                    >

            <Image x:Name="imgT5Logo" Source="/splash_logo.png"
                   Height="125"
                   Width="1000"
                   Margin="0,5,0,0"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">
                
            </Image>
            


            <StackPanel  Margin="50,25,0,0"  Orientation="Horizontal">
                <TextBlock Text="Select your game folder location:"
               FontSize="16"
                           FontWeight="Bold"
               Foreground="DarkGray"
               ></TextBlock>

                <Button x:Name="btnFolderPicker"  Content="Choose Folder"
            Background="DarkOrange"
            Foreground="Black"
            FontSize="12"
                        FontWeight="SemiBold"
             Height="30"
             Width="85"
            VerticalAlignment="Top"
                         HorizontalAlignment="Right"
                         
             Margin="110,0,0,0" Click="btnFolderPicker_Click" BorderBrush="Transparent"
            />

            </StackPanel>

            <TextBlock x:Name="txtGamePath" Text="Game path not selected."
                FontSize="12"
                Foreground="DarkRed"
                       Margin="50,5,0,0"
                ></TextBlock>
            
            <!--.lines-->
            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="50,10,0,0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="50,40,0,0"
                        >


                <TextBlock Text="Make a backup of existing dropdown list?"
                   FontSize="16"
                           FontWeight="Bold"
                   Foreground="DarkGray"
                   ></TextBlock>

                <Button x:Name="btnBackUp"  Content="Back Up"
                        Background="DarkSeaGreen"
                        Foreground="Black"
                        FontSize="12"
                        FontWeight="SemiBold"
                         Height="30"
                         Width="85"
                        VerticalAlignment="Top"
                                     HorizontalAlignment="Right"
                                     
             
                         Margin="45,0,0,0" Click="btnBackUp_Click" BorderBrush="Transparent"
                        MouseEnter="btnBackUp_MouseEnter" 
                        MouseLeave="btnBackUp_MouseLeave">
                        
                        

                  
                        
                        
                </Button>

            </StackPanel>

           <!--<    -->
                  

                <TextBlock x:Name="txtBackUpPath" Text="Back Up Path"
                       FontSize="12"
                        Foreground="DarkRed"
                        Margin="50,5,0,0"
                       >
                
            </TextBlock>
            
            
            <!--ADD BUTTONS HERE TO START FX MANUALLY ETC-->
            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="50,10,0,0"/>

        </StackPanel>
        
        
        <!--RIGHT SIDE OF GUI-->
            
        
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Grid.RowSpan="3"
                    Margin="20,10,20,10">


                    <TextBlock Text="Drop fx files here onto the dark patch."
                       FontSize="14"
                       TextWrapping="Wrap"
           
                       Height="Auto"
                       Width="auto"
                       FontFamily="Comic Sans MS"
                       Opacity="1"
           
                       Foreground="DarkGray"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                    </TextBlock>



                    <StackPanel Orientation="Vertical"
                                    Margin="5"
                                    Grid.RowSpan="2"
                                    AllowDrop="True" Drop="StackPanel_Drop" 
                                Height="520">


                        <StackPanel.Background>
                            <SolidColorBrush Color="#FF1B101D"/>
                        </StackPanel.Background>

                    </StackPanel>

            <!--THIS HERE END OF RIGHT SIDE OF GUI. CANT REALLY ADD MORE NOW IN HERE-->




        </StackPanel>
        

        
    </Grid>
    
    
    
    
    
    
    
    
    
    
</Window>
