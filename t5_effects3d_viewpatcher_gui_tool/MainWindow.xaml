<Window x:Class="t5_effects3d_viewpatcher_gui_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t5_effects3d_viewpatcher_gui_tool"
        mc:Ignorable="d"
        Title="T5 Effects3d Patcher GUI Tool" Height="675" Width="1200"
        ResizeMode="NoResize">
    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <StackPanel Orientation="Vertical"
                    >

            <Image x:Name="imgT5Logo" Source="/splash_logo.png"
                   Height="125"
                   Width="1000"
                   Margin="0,5,0,0"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">

            </Image>



            <StackPanel  Margin="50,25,0,0"  Orientation="Horizontal">
                <TextBlock Text="Select your game folder location:"
               FontSize="16"
                           FontWeight="Bold"
               Foreground="DarkGray"
               ></TextBlock>

                <Button x:Name="btnFolderPicker"  Content="Choose Folder"
            Background="DarkGray"
            Foreground="Black"
            FontSize="12"
                        FontWeight="SemiBold"
             Height="30"
             Width="95"
            VerticalAlignment="Top"
                         HorizontalAlignment="Right"
                         
             Margin="114,0,0,0" Click="btnFolderPicker_Click" BorderBrush="Transparent"
            />

            </StackPanel>

            <TextBlock x:Name="txtGamePath" Text="Game path not selected."
                FontSize="12"
                Foreground="PaleVioletRed"
                       Margin="50,5,0,0"
                ></TextBlock>

            <!--.lines-->
            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="50,10,0,0"/>

            <StackPanel Orientation="Horizontal"
                        Margin="50,40,0,0"
                        >


                <TextBlock Text="Make a backup of existing dropdown list?"
                   FontSize="16"
                           FontWeight="Bold"
                   Foreground="DarkGray"
                   ></TextBlock>

                <Button x:Name="btnBackUp"  Content="Back Up"
                        Background="DarkGray"
                        Foreground="Black"
                        FontSize="12"
                        FontWeight="SemiBold"
                         Height="30"
                         Width="95"
                        
                        VerticalAlignment="Top"
                                     HorizontalAlignment="Right"
                                     
             
                         Margin="50,0,0,0" Click="btnBackUp_Click" BorderBrush="Transparent"
                        MouseEnter="btnBackUp_MouseEnter" 
                        MouseLeave="btnBackUp_MouseLeave">






                </Button>

            </StackPanel>

            <!--<    -->


            <TextBlock x:Name="txtBackUpPath" Text="Back up file has not been made yet."
                       FontSize="12"
                        Foreground="PaleVioletRed"
                        Margin="50,5,0,0"
                       >

            </TextBlock>


            <!--ADD BUTTONS HERE TO START FX MANUALLY ETC-->
            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="50,10,0,0"/>


            <StackPanel Orientation="Horizontal"
                        Margin="50,40,0,0">

                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="txtLaunchFx" Text="Launch EffectsEd3D"
                        FontSize="16"
                               FontWeight="SemiBold"
                         Foreground="DarkSeaGreen"
                         Margin="0,5,0,0"
                        ></TextBlock>

                    <TextBlock x:Name="txtLaunchFxInfo" Text="Launch EffectsEd3D without loading any new files."
                        FontSize="12"
                         Foreground="DarkGray"
                         Margin="0,5,0,0"
                        ></TextBlock>




                </StackPanel>
                <Button x:Name="btnLaunchFxStandalone"  Content="Launch"
                    Background="DarkSeaGreen"
                    Foreground="AntiqueWhite"
                    FontSize="16"
                    FontWeight="SemiBold"
                     Height="30"
                     Width="100"
                    VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
             
     
                     Margin="98,10,0,0" BorderBrush="Transparent" Click="btnLaunchFxStandalone_Click"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal"
            Margin="50,40,0,0">

                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="txtCloseFx" Text="Close EffectsEd3D"
                        FontSize="16"
                               FontWeight="SemiBold"
                         Foreground="DarkOrange"
                         Margin="0,5,0,0"
                        ></TextBlock>

                    <TextBlock x:Name="txtCloseFxInfo" Text="Close EffectsEd3D app directly from the gui."
                        FontSize="12"
                         Foreground="DarkGray"
             Margin="0,5,0,0"
            ></TextBlock>




                </StackPanel>
                <Button x:Name="btnCloseFxStandalone"  Content="Close"
                    Background="DarkOrange"
                    Foreground="AntiqueWhite"
                    FontSize="16"
                    FontWeight="SemiBold"
                     Height="30"
                     Width="100"
                    VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
 
     
                     Margin="130,10,0,0" BorderBrush="Transparent" Click="btnCloseFxStandalone_Click"/>

            </StackPanel>


            <StackPanel Orientation="Horizontal"
 Margin="50,40,0,0">

                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="txtDonateFx" Text="Donate"
             FontSize="16"
                    FontWeight="SemiBold"
              Foreground="PaleVioletRed"
              Margin="0,5,0,0"
             ></TextBlock>

                    <TextBlock x:Name="txtDonateFxInfo" Text="Enjoy the software? Buy me a coffee from the button! :)" 
             FontSize="12"
              Foreground="DarkGray"
  Margin="0,5,0,0"
 ></TextBlock>

                    <TextBlock x:Name="txtDonateFxInfo2" Text="Buy me a coffee from the button! :)" 
            FontSize="12"
             Foreground="DarkGray"
 Margin="0,2,0,0"
></TextBlock>




                </StackPanel>
                <Button x:Name="btnDonateFxStandalone"  Content="Donate"
         Background="PaleVioletRed"
         Foreground="AntiqueWhite"
         FontSize="16"
         FontWeight="SemiBold"
          Height="30"
          Width="100"
         VerticalAlignment="Top"
                      HorizontalAlignment="Right"
 
     
          Margin="70,10,0,0" BorderBrush="Transparent" Click="btnDonateFxStandalone_Click"/>

            </StackPanel>
        </StackPanel>


        <!--RIGHT SIDE OF GUI-->


        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Grid.RowSpan="3"
                    Margin="20,20,20,10">


            <TextBlock Text="Drop fx files here to start EffectsEd3D with the files."
                       FontSize="16"
                       TextWrapping="Wrap"
                       Margin="0,80,0,0"
                               FontWeight="Bold"
                       Height="Auto"
                       Width="auto"
                       Opacity="1"
           
                       Foreground="PaleVioletRed"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left">
            </TextBlock>

            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="0,10,0,0"/>

            <StackPanel Orientation="Vertical"
                                    Margin="0,10,7.5,0"
                                    Grid.RowSpan="2"
                                    AllowDrop="True" Drop="StackPanel_Drop" 
                                Height="225">

                <StackPanel.Background>

                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF2B2B2B" Offset="0"/>
                        <GradientStop Color="#FF2B2B2B" Offset="1"/>


                    </LinearGradientBrush>


                </StackPanel.Background>
                <Image Height="112" Source="/tool.png" Stretch="Fill" Width="112" Margin="0,55,0,0" Opacity=".5"/>






            </StackPanel>



            <TextBlock x:Name="txtDropArea" Text="Currently dropped files:"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="DarkSeaGreen"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                Margin="0,10,0,0"
                                            ></TextBlock>
            <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="DarkGray" StrokeThickness="1" Margin="0,10,0,0"/>

            <ListView x:Name="lstDroppedFiles"
                         FontSize="14"
                            Background="#FF2B2B2B"
                         Foreground="PaleVioletRed"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         BorderBrush="Transparent"
                         
                         Margin="0,15,0,0"
                         Width="540"
                         Height="182"
                         MaxHeight="182"
                         MaxWidth="560">

            </ListView>





            <!--THIS HERE END OF RIGHT SIDE OF GUI. CANT REALLY ADD MORE NOW IN HERE-->




        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="518,0,0,10" TextWrapping="Wrap" Text="Software by Ultimateman 2026"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="2" Grid.Row="2"
                   Foreground="PaleVioletRed"
                   Opacity=".65"/>



    </Grid>










</Window>
